page{
    background-color: #ebebeb;
}

#header {
    width: 100%;
    height: 460rpx;
    background-color: #fff;
    color: #aaa;
}

.content {
    display: flex;
    margin-top: 10rpx;
    /*flex-direction: column;*/
    align-items: center;
    /*background: #eee*/
}

.userinfo-avatar {
    width: 148rpx;
    height: 148rpx;
    margin: 40rpx;
    border-radius: 50%;
}

.section-flex {
    display: flex;
    height: 150rpx;
    margin-top: 20rpx;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    background-color: #fff;
}

.section-item {
    width: 33%;
    height: 150rpx;
    color: #333;
    padding-top: 28rpx;
    text-align: center;
    justify-content: center;
    align-items: center;

}

.icon {
    width: 46rpx;
    height: 46rpx;
}

.section-name {
    display: flex;
    align-items: center;
    
}

.section-name text{
    font-size: 26rpx;
    margin-top: 20rpx;
}

.border-lr {
    border-left: 1rpx solid #ebebeb;
    border-right: 1rpx solid #ebebeb;
}

#footer {
    background-color: #fff;
    margin-top: 20rpx;
    width: 100%;
}

#footer .footer-content {
    height: 80rpx;
    border-bottom: 1rpx solid #ebebeb;
}

#footer .footer-content .footer-left {
    float: left;
}

#footer .footer-content .footer-left text {
    line-height: 80rpx;
    padding-left: 30rpx;
    font-size: 30rpx;
}

.arrow-right {
    float: right;
    line-height:80rpx;
    padding-right: 30rpx;
}

.arrow-right image {
    width: 30rpx;
    height: 30rpx;
}
